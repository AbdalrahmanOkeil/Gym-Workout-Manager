@using GYM.ViewModels
@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitGym.styles.css" asp-append-version="true" />
    <title>Profile</title>
    <style>
        body {
            background-color: rgb(26, 25, 25);
        }

        #sidebar {
            background-color: rgb(32, 32, 32);
            height: 100vh;
            padding-top: 1rem;
        }

        #mainContent {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: white;
        }

        .card-dark {
            background-color: rgb(32, 32, 32);
            color: white;
            width: 400px;
        }

        .profile-image {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div id="sidebar" class="col-2 d-flex flex-column align-items-center text-white">
                <partial name="_NavPartial"></partial>
            </div>

            <!-- Main Content -->
            <div id="mainContent" class="col-10 text-center">
                <div class="card card-dark p-4 text-center align-items-center">
                    @if (!string.IsNullOrEmpty(Model.ProfileImageURL))
                    {
                        <img src="@Model.ProfileImageURL" class="profile-image" alt="Profile Image" />
                    }
                    else
                    {
                        <div class="profile-image d-flex justify-content-center align-items-center bg-secondary">
                            <i class="bi bi-person-fill" style="font-size: 2.5rem;"></i>
                        </div>
                    }

                    <h3>@Model.UserName</h3>
                    <p class="text-secondary">@Model.Email</p>
                    <p class="text-secondary">Joined: @Model.JoinedDate</p>

                    <div class="mt-3">
                        <a class="btn btn-primary" asp-controller="Profile" asp-action="Edit">✏️ Edit Profile</a>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>
