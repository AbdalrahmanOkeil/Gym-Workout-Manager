@using GYM.ViewModels
@model ExerciseFormViewModel
@{
    ViewData["Title"] = "Add";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Exercise</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
          background-color: rgb(26, 25, 25);
          color: #fff;
        }
        .sidebar {
          background-color: rgb(32, 32, 32);
          min-height: 100vh;
        }
        .sidebar a {
          color: #ccc;
          text-decoration: none;
        }
        .sidebar a.active {
          color: #0d6efd;
          font-weight: bold;
        }
        .custom-input {
          background-color: rgb(71, 70, 70);
          border: none;
          color: #fff;
        }
        .custom-input:focus {
          background-color: rgb(90, 90, 90);
          color: #fff;
          box-shadow: none;
        }
        label {
          font-size: 0.9rem;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-2 sidebar">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <partial name="_NavPartial"></partial>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-10 p-4">
                <div class="rounded p-4" style="background-color: rgb(32, 32, 32);">
                    <h4 class="mb-4"><i class="bi bi-plus-circle"></i> Add New Exercise</h4>

                    <!-- Form -->
                    <form asp-action="SaveAdd" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All"></div>

                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label text-white"></label>
                            <input asp-for="Name" type="text" class="form-control form-control-sm custom-input" placeholder="Exercise name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label text-white"></label>
                            <textarea asp-for="Description" class="form-control form-control-sm custom-input" rows="3" placeholder="Exercise description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Equipment -->
                        <div class="mb-3">
                            <label asp-for="EquipmentId" class="form-label text-white"></label>
                            <select asp-for="EquipmentId" asp-items="Model.Equipments" class="form-select form-select-sm custom-input">
                                <option value="">-- Select Equipment --</option>
                            </select>
                            <span asp-validation-for="EquipmentId" class="text-danger"></span>
                        </div>

                        <!-- Primary Muscle -->
                        <div class="mb-3">
                            <label asp-for="PrimaryMuscleId" class="form-label text-white"></label>
                            <select asp-for="PrimaryMuscleId" asp-items="Model.Muscles" class="form-select form-select-sm custom-input">
                                <option value="">-- Select Equipment --</option>
                            </select>
                            <span asp-validation-for="PrimaryMuscleId" class="text-danger"></span>
                        </div>

                        <!-- Secondary Muscle -->
                        <div class="mb-3">
                            <label asp-for="SecondaryMuscleId" class="form-label text-white"></label>
                            <select asp-for="SecondaryMuscleId" asp-items="Model.Muscles" class="form-select form-select-sm custom-input">
                                <option value="">-- Select Equipment --</option>
                            </select>
                            <span asp-validation-for="SecondaryMuscleId" class="text-danger"></span>
                        </div>

                        <!-- Video URL -->
                        <div class="mb-3">
                            <label asp-for="VideoFile" class="form-label text-white"></label>
                            <input asp-for="VideoFile" type="file" class="form-control form-control-sm custom-input">
                            <span asp-validation-for="VideoFile" class="text-danger"></span>
                        </div>

                        <!-- Submit -->
                        <button type="submit" class="btn btn-primary w-100 mt-2">
                            <i class="bi bi-check-circle"></i> Save Exercise
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!--Client Side Validation-->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>


