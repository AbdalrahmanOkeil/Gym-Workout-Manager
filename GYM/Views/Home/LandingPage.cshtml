
@{
    ViewData["Title"] = "LandingPage";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FIT GYM - Intro</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <style>
        body {
            background-color: #121212;
            color: white;
            font-family: Arial, sans-serif;
        }

        .hero {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.8)), url('gym-bg.jpg') center/cover no-repeat;
            padding: 20px;
        }

            .hero h1 {
                font-size: 3rem;
                font-weight: bold;
            }

            .hero p {
                font-size: 1.2rem;
                color: #bbb;
                max-width: 600px;
                margin: auto;
            }

        .btn-custom {
            background-color: #3a3a3a;
            color: white;
            border-radius: 6px;
            padding: 12px 30px;
            margin: 10px;
            border: none;
            font-size: 1rem;
        }

            .btn-custom:hover {
                background-color: #555;
            }

        .features {
            background-color: #1e1e1e;
            padding: 50px 20px;
        }

        .feature-box {
            padding: 20px;
            border-radius: 10px;
            background-color: #2a2a2a;
            text-align: center;
        }

            .feature-box i {
                font-size: 2rem;
                margin-bottom: 15px;
                color: #f39c12;
            }
    </style>
</head>
<body>

    
    <section class="hero">
        <div>
            <h1>Welcome to FIT GYM</h1>
            <p>Track your workouts, discover new exercises, and achieve your fitness goals with our smart gym assistant.</p>
            <div>
                <a asp-action="Login" asp-controller="Account" class="btn btn-custom">Login</a>
                <a asp-action="Register" asp-controller="Account" class="btn btn-custom">Register</a>
            </div>
        </div>
    </section>

    
    <section class="features text-center">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-box">
                        <i class="bi bi-bar-chart-line"></i>
                        <h5>Track Progress</h5>
                        <p>Monitor your performance and analyze workout statistics easily.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-box">
                        <i class="bi bi-heart-pulse"></i>
                        <h5>Personalized Routines</h5>
                        <p>Get tailored workout plans based on your goals and progress.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-box">
                        <i class="bi bi-collection-play"></i>
                        <h5>Exercise Library</h5>
                        <p>Discover new exercises with videos and instructions.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</body>
</html>
