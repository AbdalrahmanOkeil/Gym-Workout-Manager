@model Routine
@using System.Linq

@{
    ViewData["Title"] = "Routine Details";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Routine</title>
</head>
<body>
    <div class="container-fluid" style="background-color: rgb(26, 25, 25);">
        <div class="row justify-content-between vh-100">
            <!-- Sidebar -->
            <div class="col-2 h-100 " style="background-color: rgb(32, 32, 32);">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <partial name="_NavPartial"></partial>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-7 text-white p-4">
                <a asp-action="Index" class="text-secondary mb-3 d-block">
                    <i class="bi bi-arrow-left"></i> Back
                </a>

                <h5 class="mb-4">Exercises</h5>

                <div class="d-flex flex-column gap-3">
                    @foreach (var routineExercise in Model.RoutineExercises)
                    {
                        var ex = routineExercise.Exercise;
                        <div class="d-flex align-items-center p-2 rounded" style="background-color:#202020;">
                            <div class="me-3">
                                @if (!string.IsNullOrEmpty(ex.VideoURL))
                                {
                                    <video src="@ex.VideoURL" width="50" height="50" class="rounded-circle" muted autoplay loop></video>
                                }
                                else
                                {
                                    <img src="~/images/exercise-placeholder.png" width="50" height="50" class="rounded-circle" />
                                }
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-semibold">@ex.Name</div>
                                <div class="d-flex gap-2 mt-1">
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-list-ul"></i> @routineExercise.Sets?.Count() sets
                                    </span>
                                    @if (routineExercise.Sets != null && routineExercise.Sets.Any())
                                    {
                                        var repsMin = routineExercise.Sets.Min(s => s.Reps);
                                        var repsMax = routineExercise.Sets.Max(s => s.Reps);
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-arrow-repeat"></i> @(repsMin == repsMax ? $"{repsMin} reps" : $"{repsMin}-{repsMax} reps")
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Right Side User Card -->
            <div class="col-3 text-white p-4">
                <div class="card text-white rounded p-3" style="background-color: rgb(32, 32, 32);">
                    <div class="d-flex align-items-center mb-3">
                        <img src="~/css/images/user-placeholder.png" width="40" height="40" class="rounded-circle me-2" />
                        <span><small>Created by </small><br /> <strong>@User.Identity?.Name</strong></span>
                    </div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-100 mb-2">Edit Routine</a>
                    <button class="btn btn-outline-secondary w-100" onclick="copyLink()">Copy Routine Link</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function copyLink() {
            navigator.clipboard.writeText(window.location.href);
            alert("Routine link copied!");
        }
    </script>
</body>
</html>
